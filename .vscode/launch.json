    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "well-api-demo",
            "args": [".\\src\\server.ts"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            //"internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "parcel build",
            "program": "${workspaceRoot}//parcel/build.js",
            "protocol": "inspector"
        }
    ]
}